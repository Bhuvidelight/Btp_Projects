<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<VBox id="_IDGenVBox" core:require="{ handler: 'orders/ext/fragment/ApprovalHistory'}">
		
		<Table id="_IDGenTable"
    items="{
         path: 'orderToapprovalHistory',
        sorter: {
            path: 'Approvallevel',
            descending: false
        }
    }">

    <columns>
        <Column id="_IDGenColumn" mergeDuplicates="true">
            <header>
                <Text id="_IDGenText" text="Level" />
            </header>
        </Column>

        <Column id="_IDGenColumn1">
            <header>
                <Text id="_IDGenText1" text="Approver Name" />
            </header>
        </Column>

        <Column id="_IDGenColumn2">
            <header>
                <Text id="_IDGenText3" text="Email" />
            </header>
        </Column>

        <Column id="_IDGenColumn3">
            <header>
                <Text id="_IDGenText4" text="Status" />
            </header>
        </Column>

        <Column id="_IDGenColumn4" minScreenWidth="Tablet" demandPopin="true">
            <header>
                <Text id="_IDGenText5" text="Action Date" />
            </header>
        </Column>

        <Column id="_IDGenColumn5" minScreenWidth="Tablet" demandPopin="true">
            <header>
                <Text id="_IDGenText7" text="Days Taken" />
            </header>
        </Column>
    </columns>

    <items>
        <ColumnListItem id="_IDGenColumnListItem" vAlign="Middle">
            <cells>
                <Text id="_IDGenText8" text="{Approvallevel}" />
                <Text id="_IDGenText9" text="{ApproverName}" />
                <Text id="_IDGenText10" text="{ApproverEmail}" />

                <ObjectStatus id="_IDGenObjectStatus1"
                    text="{Status}"
                    state="{= ${Status} === 'APPROVED' ? 'Success' : (${Status} === 'REJECTED' ? 'Error' : 'Information') }"/>

                <Text id="_IDGenText11" text="{ActionAt}" />
                <Text id="_IDGenText12" text="{DaysTaken}" />
            </cells>
        </ColumnListItem>
    </items>

</Table>
       
	</VBox>

</core:FragmentDefinition>