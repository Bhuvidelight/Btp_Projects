<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<VBox id="_IDGenVBox2" core:require="{ handler: 'orders/ext/fragment/Comments'}">
     
        
       <Text
            id="commentsFragment-TitleText"
            text="Add Comment"
            class="sapUiSmallMarginBottom" />

        <HBox 
            id="commentsFragment-ViewAllHBox"
            width="100%" 
            justifyContent="End">
            <Button
                id="commentsFragment-ViewAllButton"
                text="View All Comments"
                type="Transparent"
                press="handler.onLoadComments"/>
        </HBox>

        <TextArea
            id="commentsFragment-CommentTextArea"
            rows="5"
            width="100%"
            placeholder="Enter your comment..." />

        <HBox
            id="commentsFragment-ButtonHBox"
            justifyContent="End"
            class="sapUiSmallMarginTop">

           

        </HBox>


    
		
	</VBox>
</core:FragmentDefinition>